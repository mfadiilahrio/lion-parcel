<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:tint="@color/background">
            <solid android:color="@color/grey300" />
            <stroke android:width="1dp" android:color="@color/grey300" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:tint="@color/background">
            <solid android:color="@color/grey200" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:tint="@color/background">
            <solid android:color="@color/grey100" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:tint="@color/background">
            <stroke android:width="1dp" android:color="@color/grey300" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</selector>