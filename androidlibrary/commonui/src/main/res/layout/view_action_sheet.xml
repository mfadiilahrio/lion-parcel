<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/large">

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_sheet_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_sheet_title"
            style="@style/BoldBody3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/colorPrimaryText"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/bottom_sheet_message"
            style="@style/RegularBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimaryText"
            tools:text="@tools:sample/lorem" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/action_sheet_cancel_background"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

    </LinearLayout>

</LinearLayout>