    <style name="SocialButton.Base" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/body_2</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/social_button_text</item>

        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">@color/grey500</item>
        <item name="backgroundTint">@color/social_button_background</item>

        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">5dp</item>

        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="SocialButton" parent="SocialButton.Base" />

    <style name="SecondaryButton" parent="SocialButton.Base">
        <item name="backgroundTint">@color/secondary_button_background</item>

        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomRadioButton" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
